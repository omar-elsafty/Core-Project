@model List<Catigory>

@{
    ViewData["Title"] = "Index";
}


<br />
<br />
@if (Model != null && Model.Count > 0)
{
    <table class="table table-hover  table-striped">
        <thead>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <br />
                <br />
            </tr>
        </thead>
        <tbody id="tbody">
            @foreach (var item in Model)
            {
                <tr id="@item.Id">
                    <td>@item.Id</td>
                    <td>@item.Name</td>

                </tr>
            }
        </tbody>

        <div class="add-product__actions">
            <a href="/Catigories/Add/" class="btn btn-primary btn-sm" title="view">
                <i class="fas fa-plus"></i>
            </a>

        </div>


    </table>
}
else
{
    <div class="alert alert-info">
        No Categories found,Please add new Category.
    </div>
}
